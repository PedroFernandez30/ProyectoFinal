{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}¡Inicia sesión!{% endtrans %}
{% endblock %}

{% block body %}
<form method="post">
    {% if noError is not defined %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    {% endif %}
   
{#{{ noError }}#}
    {% if app.user %}
        <div class="mb-3">
            {% trans %}Has iniciado sesión como{% endtrans %} {{ app.user.username }}, 
            <a href="{{ path('app_logout') }}">{% trans %}Cerrar sesión{% endtrans %}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{% trans %}Inicia sesión{% endtrans %}</h1>
    <label for="inputEmail">{% trans %}Correo{% endtrans %}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">{% trans %}Contraseña{% endtrans %}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
    {% if previo is defined %}
        <input type="hidden" name="_target_path" value = {{ previo }}/>
    {% endif %}
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary mt-4" type="submit">
        {% trans %}Inicia sesión{% endtrans %}
    </button>
    <p class="text-light">{% trans %}¿No tienes cuenta? Regístrate{% endtrans %} 
        <a class="text-white" href="{{ path('app_register') }}">{% trans %}aquí{% endtrans %} </a></p>
</form>
{% endblock %}
