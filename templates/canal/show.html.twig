{% extends 'base.html.twig' %}

{% block title %}{{ canal.nombreCanal }}{% endblock %}

{% block body %}
    <div class="container-fluid p-4 bg-dark">
        <h1>{{ canal.nombreCanal }}</h1>
        <span id="numSuscriptores">{{ canal.suscritosAMi | length }} suscriptores</span>
        <div class="row">
            <div class="col-12 offset-3 offset-md-3 col-lg-2 offset-lg-3 offset-sm-0 col-sm-12 col-md-2" id="toggleSuscripcion">
                {% include "suscripcion/toggleSuscripcion.html.twig" %}
            </div>
    
            <div class="col-12 offset-3 offset-md-3 col-lg-2 offset-lg-3 offset-sm-0 col-sm-12 col-md-2">
                {% if app.user.id == canal.id %}
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
                        Subir vídeo
                     </button> 
                {% endif %}
            </div>
        </div>
        

        
        
        <ul class="nav nav-tabs">
            <li class="nav-item">
                {% set url = path('video_list') %}
              <a class="nav-link blanco active" href="" id="tabVideos" onclick="event.preventDefault();cambiarTabActiva(this, '{{ url }}', '{{ canal.id }}')">VÍDEOS</a>
            </li>
            <li class="nav-item">
                {% set url = path('comentario_list') %}
              <a class="nav-link blanco" href="{{ path('comentario_list') }}" id="tabComunidad" onclick="event.preventDefault();cambiarTabActiva(this, '{{ url }}', '{{ canal.id }}', 'canal');">COMUNIDAD</a>
            </li>
          </ul>
    </div>

    {% if app.user %}
            
            <!-- Button trigger modal -->
               

         <!-- Modal -->
        <div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content bg-dark">
                    <div class="modal-header">
                    <h5 class="modal-title text-white" id="exampleModalLabel"> Subida de vídeo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        {#{% include "video/new.html.twig" with {'form': form, 'video': video} %}#}
                        {{ render(path('video_new')) }}
                        {#{{ render(controller(
                            'App\\Controller\\VideoController::new'
                        )) }}#}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        

        <div id="comunidadOVideos">
            {% include "video/index.html.twig" with {'videos': canal.videos, 'extiende': 'false'} %}
        </div>
        
       
            
    

    <!--<a href="{{ path('canal_index') }}">back to list</a>

    <a href="{{ path('canal_edit', {'id': canal.id}) }}">edit</a>

    {{ include('canal/_delete_form.html.twig') }}-->
{% endblock %}
