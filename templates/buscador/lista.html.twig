<div class="container">
    {% if videos | length == 0 and canales | length == 0 %}
        No existen resultados que coincidan con los parámetros de búsqueda
        {% else %}
            <p>Tipo:</p>
            <input type="radio" id="videos" name="tipo" value="videos" onclick="filtrarPorTipo(this);">
            <label for="videos">Vídeos</label>
            <input type="radio" id="canales" name="tipo" value="canales" onclick="filtrarPorTipo(this);">
            <label for="canales">Canales</label>
            <input type="radio" id="todos" name="tipo" value="todos" onclick="filtrarPorTipo(this);">
            <label for="todos">Todos</label>
            
            <div id="canalesEncontrados">
                {% if canales | length > 0 %}
                    <h1>Canales</h1>
                    {% for canal in canales %}
                        <div class="row m-4">
                            <div class="col-3">
                                {#onerror="this.src='imgPerfil/profile.jpg'"#}
                                <a href="{{ path('canal_show', { 'id': canal.id }) }}">
                                    <img src="{{asset('imgPerfil/'~ canal.id)}}" width="150" onerror="this.src = assetsProfilesPics+'profile.jpg';" id=''~ {{ canal.id }}>
                                </a>
                            </div>
                            
                            <div class="col-8">
                                <a href="{{ path('canal_show', { 'id': canal.id }) }}" class="text-white">
                                    <h3>{{ canal.nombreCanal }}</h3>
                                </a>
        
                                <span>{{ canal.suscriptores }} suscriptor(es)</span>
                                
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            
            <div id="videosEncontrados">
                {% if videos | length > 0 %}
                <h1>Vídeos</h1>
                    {% for video in videos %}
                        <div class="row m-4">
                            <div class="col-4">
                                <a href="{{ path('video_show', { 'id': video.id }) }}">
                                    <img  class="imgCanal" src="{{asset('uploads/'~ video.idCanal.id ~ '/miniaturas/' ~ video.id)}}" id=''~ {{ video.id }}>
                                </a>
                            </div>
                            
                            <div class="col-8">
                                <a href="{{ path('video_show', { 'id': video.id }) }}" class="text-white">
                                    <h3>{{ video.titulo }}</h3>
                                </a>
                                
                                <a href="{{ path('canal_show', { 'id': video.idCanal.id }) }}" class="h4">
                                    <span>{{ video.idCanal.nombreCanal }}</span>
                                </a>
                                <p>
                                    <span>{{ video.fechaPublicacion }}</span>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
    {% endif %}
</div>
