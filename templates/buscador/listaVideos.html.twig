{% if videos | length > 0 %}
    <h1>{% trans %}Vídeos{% endtrans %}</h1>
        {% for video in videos %}
            <div class="row my-4 ml-4">
                <div class="col-3 col-sm-2">
                    <a href="{{ path('video_show', { 'id': video.id }) }}">
                        <img class="imgResBusqueda" src="{{asset('uploads/'~ video.idCanal.id ~ '/miniaturas/' ~ video.id)}}" id=''~ {{ video.id }}>
                    </a>
                </div>
                
                <div class="col-8">
                    <a href="{{ path('video_show', { 'id': video.id }) }}" class="text-white">
                        <h3>{{ video.titulo }}</h3>
                    </a>
                    
                    <a href="{{ path('canal_show', { 'id': video.idCanal.id }) }}" class="h4">
                        <span>{{ video.idCanal.nombreCanal }}</span>
                    </a>
                    <p>
                        {% if app.request.locale == 'es' %}
                                {{ video.fechaPublicacion | date('d/m/Y')  }}
                            {% else %}
                                {{ video.fechaPublicacion | date('m/d/Y')  }}</span>
                        {% endif %} 
                    </p>
                </div>
            </div>
        {% endfor %}
        {% else %}
            <p>{% trans %}No existen vídeos que coincidan con los parámetros de búsqueda{% endtrans %}</p>
{% endif %}
