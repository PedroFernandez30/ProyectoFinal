<!DOCTYPE html>
<html lang="es">
    {% set menu = true %}
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}

            <!-- Renders a link tag (if your module requires any CSS)
            <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}
    </head>
    <body>
      
        <nav id="barraNavegacion" class="navbar navbar-expand navbar-dark bg-secondary sticky-top">
          {% if app.user %}
            <ul class="navbar-nav">
              <li class="nav-item dropdown mr-1">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <img src="{{ asset('img/toggleMenuLateral.png')}}" alt="logoPerfilDefecto" class="rounded">
                </a>
                <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="{{ path('video_index') }}">Página principal</a>
                  <a class="dropdown-item" href="{{ path('canal_show', {'id': app.user.id }) }}">Tus vídeos</a>
                  <div class="dropdown-divider"></div>
                  {% if app.user.misSuscripciones | length > 0 %}
                    <span class="p-4">{{ app.user.misSuscripciones | length }} Suscripciones</span>
                    {% for suscripcion in app.user.misSuscripciones %}
                      <a class="dropdown-item" href="{{ path('canal_show', {'id': suscripcion.canalAlQueSuscribe.id }) }}">{{ suscripcion.canalAlQueSuscribe.nombreCanal }}</a>
                    {% endfor %}
                  {% endif %}

                </div>
              </li>

            </ul>
          {% endif %}
            <a class="navbar-brand" href="{{ path('video_index') }}">
                <img class="imgCabecera" src="{{ asset('img/logofondo_blanco.png')}}" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              
              <form class="form-inline my-2 my-lg-0 m-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0 d-sm-none d-none d-md-block" type="submit">Search</button>
              </form>
              {% if app.user %}
                <ul class="navbar-nav float-right bg-dark">
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <img class="imgCabecera" src="{{ asset('imgPerfil/profile.jpg')}}" alt="logoPerfilDefecto" class="rounded">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right bg-dark" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="{{ path('canal_edit', {'id': app.user.id }) }}">Configuración</a>
                      <a class="dropdown-item" href="{{ path('prueba') }}">Traducir página</a>
                      <a class="dropdown-item" href="{{ path('traducir', {'_locale': 'es', 'previo': ''~ app.request.get('_route') }) }}">Español</a>
                      <a class="dropdown-item" href="{{ path('traducir', {'_locale': 'en', 'previo': ''~ app.request.get('_route') }) }}">Inglés</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar sesión</a>
                    </div>
                  </li>
                </ul>
                {% else %}
                  <a href="{{ path('app_login') }}" class="btn btn-info">Iniciar sesión</a>
              {% endif %}
              
            </div>
          </nav>

          {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
          {% endfor %}
          
        {% block body %}
        
        {% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>
