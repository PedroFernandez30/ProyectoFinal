{% extends 'base.html.twig' %}

{% block title %}Comentario index{% endblock %}

{% block body %}
    <h1>Comentario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenido</th>
                <th>FechaComentario</th>
                <th>Canal comentado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comentario in comentarios %}
            <tr>
                <td>{{ comentario.id }}</td>
                <td>{{ comentario.contenido }}</td>
                <td>{{ comentario.fechaComentario ? comentario.fechaComentario|date('d/m/Y') : '' }}</td>
                <td>{{ comentario.canalComentado }}</td>
                <td>
                    <a href="{{ path('comentario_show', {'id': comentario.id}) }}">show</a>
                    <a href="{{ path('comentario_edit', {'id': comentario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comentario_new') }}">Create new</a>
{% endblock %}
