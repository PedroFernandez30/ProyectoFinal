{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ video.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ video.descripcion }}</td>
            </tr>
            <tr>
                <th>Mg</th>
                <td>{{ video.mg }}</td>
            </tr>
            <tr>
                <th>Dislike</th>
                <td>{{ video.dislike }}</td>
            </tr>
            <tr>
                <th>Duracion</th>
                <td>{{ video.duracion ? video.duracion|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaPublicacion</th>
                <td>{{ video.fechaPublicacion ? video.fechaPublicacion|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('video_index') }}">back to list</a>

    <a href="{{ path('video_edit', {'id': video.id}) }}">edit</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
